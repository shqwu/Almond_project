for i in (0,2,4,6,8,10,12):
    rect=mpatches.Rectangle([-0.5+i,-120], 1, 130, ec='white', fc='grey', alpha=0.2, clip_on=False)
    axs[1,1].add_patch(rect)
plt.xticks(np.arange(0,len(trans)), trans.index, rotation=90, fontsize = 35)
