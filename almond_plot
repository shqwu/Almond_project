ax.set_ylim([-105, 150]) 
mpl.rcParams['hatch.linewidth'] = 3
hatches = ['','','//','//','','','//','//','','','//','//','','','//','//','','','//','//','','','//','//','','//','','//','','//','','//','','//','','//','','//']
for hatch,patch in zip(hatches,ax.patches):
    patch.set_hatch(hatch)
adjust_box_widths(fig, 0.8)
