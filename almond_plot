##response function
gridmet_aci_contribution = np.zeros((656,aci_num,1000))
for i in range(0,656):
    for trial in range(0,1000):
        gridmet_aci_contribution[i,:,trial] = (gridmet[i,:]*coef_sum[trial,:])[0:aci_num] +  (gridmet[i,:]*coef_sum[trial,:])[aci_num:aci_num*2]
for i in range(13):
    locals()['gridmet_aci_contribution_df'+str(i)] = pd.DataFrame(gridmet_aci_contribution[:,i,:])
    locals()['gridmet_aci_contribution_df'+str(i)]['aci'] = gridmet[:,i]
    locals()['gridmet_aci_contribution_df'+str(i)] = locals()['gridmet_aci_contribution_df'+str(i)].sort_values('aci')
    locals()['gridmet_aci_contribution_df'+str(i)] = np.array(locals()['gridmet_aci_contribution_df'+str(i)])

y_min = np.zeros((656, 13)) 
y_max = np.zeros((656, 13)) 
for i in range(13):
    y_min[:,i] = np.min(locals()['gridmet_aci_contribution_df'+str(i)][:,0:-1], axis = 1)
    y_max[:,i] = np.max(locals()['gridmet_aci_contribution_df'+str(i)][:,0:-1], axis = 1)



palette = sns.color_palette('coolwarm', n_colors=1000)
plt.figure(figsize = (40,210))
for i in range(0,aci_num):
    plt.subplot((aci_num+1)//2,2,i+1)
    for trial in range(1000):
        plt.plot(locals()['gridmet_aci_contribution_df'+str(i)][:,trial], color = palette[trial], alpha = 0.2)
#    plt.fill_between(x =locals()['gridmet_aci_contribution_df'+str(i)][:,-1], y1 = y_min[:,i], y2 = y_max[:,i])
    plt.title(str(ACI_list[i]), fontsize = 30)
    plt.xticks(fontsize = 30)
    plt.yticks(fontsize = 30)
plt.savefig(str(box_path)+'/UCDGlobalChange/shqwu/Almond_plots/manuscript_plot/response_v2_min_max.png', dpi = 300)




