##correlation matrix            
cor_matrix = np.zeros((aci_num,aci_num))
for i in range(0,aci_num):
    for j in range(0,aci_num):
        cor_matrix[i,j] = np.corrcoef(gridmet[:,i], gridmet[:,j])[0,1]
plt.figure(figsize = (22,20))
ax = sns.heatmap(cor_matrix, cmap = 'coolwarm', linewidth = 0.3,vmin = -1,vmax = 1, annot = True, square = True,annot_kws={"fontsize":17})
ax.set_yticklabels(ACI_list, rotation = 0,fontsize = 25)
ax.set_xticklabels(ACI_list, rotation = 90,fontsize = 25)
plt.title('GridMet ACI Correlation Matrix', fontsize = 25, y = 1.05)
cbar = ax.get_children()[0]
cbar = ax.collections[0].colorbar
cbar.ax.tick_params(labelsize=25)
plt.savefig(str(box_path)+'/UCDGlobalChange/shqwu/Almond_plots/manuscript_plot/cor_matrix_gridmet.pdf', dpi = 300,bbox_inches='tight')


## ACI coef boxplot
for i in range(aci_num):
    locals()[ACI_list[i]+'_coef_df'] = pd.DataFrame({'ACI' : np.repeat(ACI_list[i], 1000), 'coef' : coef_sum[:,i]})
    locals()[ACI_list[i]+'_coef_sqr_df'] = pd.DataFrame({'ACI' : np.repeat(ACI_list[i], 1000), 'coef' : coef_sum[:,i+aci_num]})       
ACI_coef_df = pd.DataFrame({})
ACI_sqr_coef_df = pd.DataFrame({})

for i in range(aci_num):
    ACI_coef_df = ACI_coef_df.append(locals()[ACI_list[i]+'_coef_df'])
    ACI_sqr_coef_df = ACI_sqr_coef_df.append(locals()[ACI_list[i]+'_coef_sqr_df'])
plt.figure(figsize = (30,20))
plt.subplot(2,1,1)
sns.boxplot(data = ACI_coef_df, x = 'ACI', y = 'coef', palette = 'tab20')
