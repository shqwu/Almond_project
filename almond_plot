blank = trans.amount.cumsum().shift(1).fillna(0)
trans['positive'] = trans['amount'] > 0
total = trans.sum().amount
#trans.loc['net']= total
#blank.loc['net'] = total
step = blank.reset_index(drop=True).repeat(3).shift(-1)
step[1::3] = np.nan
#blank.loc['net'] = 0
